{
  "id": "1644f10b-352c-43f3-9957-8c158759ba7c",
  "name": "AzureSQLLogin",
  "friendlyName": "Azure SQL Logins",
  "description": "Add new SQL Users & Logins to a database",
  "author": "Code88",
  "helpMarkDown": "Add new SQL Users & Logins to a database",
  "category": "Deploy",
  "visibility": [
    "Release"
  ],
  "demands": [
    "azureps"
  ],
  "version": {
    "Major": "5",
    "Minor": "3",
    "Patch": "0"
  },
  "minimumAgentVersion": "1.103.0",
  "instanceNameFormat": "Azure SQL Logins $(message)",

  "groups": [
        {
            "name": "ReadOnly",
            "displayName": "Create Read Only Login Account",
            "isExpanded": true
        },
        {
            "name": "AdminUsers",
            "displayName": "Create Admin Login Account",
            "isExpanded": true
        }
        ],

  "inputs": [

       {
            "name": "Choice",
            "type": "pickList",
            "label": "Read Only Or Admin Account",
            "defaultValue": "Admin Login",
            "required": true,
            "helpMarkDown": "Pick an option to add login to Azure SQL",
            "options": {
                "RO": "Read Only",
                "AD": "Admin Rights"
            }
       },
         {
            "name": "Server",
            "type": "string",
            "label": "Database Connection",
            "required": false
        },
        {
            "name": "Database",
            "type": "string",
            "label": "Name of the Database",
            "required": false
        },
         {
            "name": "AdminName",
            "type": "string",
            "label": "SQL Admin",
            "required": false
        },
         {
            "name": "AdminPassword",
            "type": "string",
            "label": "SQL Password",
            "required": false
        },
         

         {
            "name": "UserNameSG",
            "type": "string",
            "label": "SendGrid UserName",
            "required": false
        },
         {
            "name": "PasswordSG",
            "type": "string",
            "label": "SendGrid Password",
            "required": false
        },
         {
            "name": "EmailFrom",
            "type": "string",
            "label": "Custom address",
            "required": false
        },

          {
            "name": "UserName",
            "type": "string",
            "label": "Email Addresses",
            "visibleRule": "Choice = AD",
            "required": false
        },
        {
            "name": "ReadOnlyUser",
            "type": "string",
            "label": "Read Only User Name",
            "required": false,

            "defaultValue": "ReadOnlyAzureSQL",
             "visibleRule": "Choice = RO",
            "helpMarkDown": "Name of the read only account"
        },     
        {
            "name": "ReadOnlyEmail",
            "type": "string",
            "label": "Email Address",
            "required": false,

            "defaultValue": "",
            "visibleRule": "Choice = RO",
            "helpMarkDown": "Email Address of the user who wants the readonly Information"
        }

  ],  
"dataSourceBindings": [
],
  "execution": {
    "PowerShell3": {
      "target": "$(currentDirectory)\\Azure.ps1"
    }
  }
}