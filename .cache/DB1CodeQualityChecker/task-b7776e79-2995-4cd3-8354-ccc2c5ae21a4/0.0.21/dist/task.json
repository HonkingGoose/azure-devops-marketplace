            "helpMarkDown": "File that contain results of tests."
        },
        {
            "name": "ExclusionPaths",
            "type": "string",
            "label": "Exclusion Paths",
            "defaultValue": "dist/**/*, node_modules/**/*",
            "required": false,
            "helpMarkDown": "Folders where code analysis should ignore"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
