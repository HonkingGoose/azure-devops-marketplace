{
  "id": "9eb2b305-d17a-4350-bd05-b711ad645ef3",
  "name": "GitClone",
  "friendlyName": "Git Repository Clone",
  "description": "Git Repository Clone",
  "author": "Febiunz",
  "helpMarkDown": "[More information](https://github.com/Febiunz/AzureDevOpsExtensionGitClone/blob/master/README.md)",
  "category": "Utility",
  "demands": [],
  "version": {
    "Major": 1,
    "Minor": 1,
    "Patch": 0
  },
  "minimumAgentVersion": "1.95.1",
  "instanceNameFormat": "Git Repository Clone: $(RepositoryURL)",
  "inputs": [
    {
      "name": "RepositoryURL",
      "type": "string",
      "label": "Repository URL",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Repository URL to clone"
    },
    {
      "name": "RepositoryPath",
      "type": "string",
      "label": "Repository Path",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Full path to store the git repository. If empty then default working folder"
    },
    {
      "name": "BranchTag",
      "type": "string",
      "label": "Branch/Tag",
      "defaultValue": "master",
      "required": true,
      "helpMarkDown": "Branch/tag to checkout"
    },
    {
      "name": "Clean",
      "type": "boolean",
      "label": "Clean",
      "defaultValue": "false",
      "required": false,
      "helpMarkDown": "If true then delete and clone. If false then pull latest changes"
    }
  ],
  "execution": {
    "Powershell3": {
      "target": "GitClone.ps1"
    }
  }
}
