{
    "id": "D58DEADE-20F5-4C8D-BD34-045A5151D320",
    "name": "AMLRunExperiment",
    "friendlyName": "AML Run Experiment",
    "description": "AzureML Run Experiment",
    "helpUrl": "https://go.microsoft.com/fwlink/?linkid=848891",
    "helpMarkDown": "[More Information](https://go.microsoft.com/fwlink/?linkid=848891)",
    "category": "Deploy",
    "releaseNotes": "Works with cross-platform agents (Linux, macOS, or Windows)",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "ms-air-aiagility",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 7
    },
    "inputs": [
        {
            "name": "connectedServiceName",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "AML Workspace",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Machine Learning Workspace"
        },
        {
            "name": "computeTargetName",
            "type": "pickList",
            "label": "Compute Target",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Compute Target for AML",
            "options": {
                "EditableOptions": "True"
            }
        }, 
        {
            "name": "experimentScriptPath",
            "type": "filePath",
            "label": "Experiment Script Path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Fully qualified path of experiment script for model training"
        },        
        {
            "name": "condaEnvPath",
            "type": "filePath",
            "label": "Conda Environment Path",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Fully qualified path of conda environment for model training"
        },
        {
            "name": "experimentName",
            "type": "string",
            "label": "Experiment Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "AML experiement name.",
            "options": {
                "EditableOptions": "True"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "computeTargetName",
            "endpointId": "$(connectedServiceName)",
            "dataSourceName": "ComputeTargets",
            "resultTemplate": "{ \"Value\" : \"{{{name}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
        }
    ],
    "instanceNameFormat": "AML Run Experiment: $(experimentName)",
    "execution": {
        "Node": {
            "target": "index.js"
        }
    },
    "messages": {
        "AmlCliNotAvailable": "AzureML CLI is not available",
        "InvalidWorkspace": "Invalid AML workspace name: %s",
        "ErrorInSettingUpSubscription": "Failed to set default subscription"
    }
}