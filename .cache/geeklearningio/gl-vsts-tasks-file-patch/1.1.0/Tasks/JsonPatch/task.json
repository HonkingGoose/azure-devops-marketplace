{
  "id": "DEEAA603-DA23-43AB-A099-33AEFE358520",
  "name": "JsonPatch",
  "friendlyName": "Patch JSON Files",
  "description": "Patch JSON files using JSON patch syntax",
  "helpMarkDown": "[More Information](https://github.com/geeklearningio/gl-vsts-tasks-file-patch/wiki/Patch-JSON-Files) (Version 1.1.0)",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "author": "Geek Learning",
  "version": {
    "Major": 1,
    "Minor": 1,
    "Patch": 0
  },
  "demands": [
    "npm"
  ],
  "minimumAgentVersion": "1.91.0",
  "instanceNameFormat": "Patch files $(JsonTargetFilters)",
  "inputs": [
    {
      "name": "SyntaxType",
      "type": "pickList",
      "label": "Syntax type",
      "defaultValue": "Standard",
      "required": true,
      "helpMarkDown": "The syntax used for the patch content. See documentation for more information.",
      "options": {
        "standard": "Standard Syntax",
        "slick": "Slick Syntax"
      }
    },
    {
      "name": "JsonWorkingDir",
      "type": "filePath",
      "label": "Patch working directory",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Working directory. Example: $(Build.SourcesDirectory)"
    },
    {
      "name": "JsonTargetFilters",
      "type": "multiLine",
      "label": "Target files",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Patch target file. Example: appsettings*.json"
    },
    {
      "name": "JsonPatchContent",
      "type": "multiLine",
      "label": "Patch Content",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Patch content.",
      "properties": {
        "resizable": "true",
        "rows": "10",
        "maxLength": "5000"
      }
    },
    {
      "name": "OutputPatchFile",
      "type": "boolean",
      "label": "Output patched file in logs",
      "defaultValue": "false",
      "helpMarkDown": "Output patched file in logs"
    }
  ],
  "execution": {
    "Node": {
      "target": "jsonPatch.js",
      "argumentFormat": ""
    }
  }
}
