{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "b7e2e16c-c7c7-4a4b-bdc2-e2662823beee",
    "name": "CancelApproval",
    "friendlyName": "Cancel Stage PostApproval",
    "description": "Cancel Stage PostApproval",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Mohammed Mahdy",
    "preview": false,
    "version": {
        "Major": 0,
        "Minor": 28,
        "Patch": 0
    },
    "instanceNameFormat": "Cancel Stage Approvals",
    "groups":  [
  
    ],
    "inputs": 
    [
        {
            "name": "definitionName",
            "type": "pickList",
            "label": "Definition name",
            "helpMarkDown": "Specify target release definition name or ID",
            "required": true,
            "properties": {
              "EditableOptions": true
            }
          },
        {
            "name":  "EnironmentToCancelApprovals",
            "type":  "pickList",
            "label":  "Enironment name to cancel approvals",
            "defaultValue":  "",
            "required":  true,
            "groupName":  "",
            "helpMarkDown":  "must be an environment after current environment in the pipeline, make sure the name of the environment is correct",
            "properties": {
                "EditableOptions": "False"
              }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "definitionName",
            "endpointId": "tfs:rm",
            "endpointUrl": "{{endpoint.url}}/{{system.teamProject}}/_apis/release/definitions",
            "resultSelector": "jsonpath:$.value[?(@.isDeleted == false)]",
            "resultTemplate": "{ \"Value\" : \"{{{name}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
          },
        {
            "target": "EnironmentToCancelApprovals",
            "endpointId": "tfs:rm",
            "endpointUrl": "{{endpoint.url}}/{{system.teamProject}}/_apis/release/definitions/{{System.DefinitionId}}&$expand=Environments",
            "resultSelector": "jsonpath:$.value[*].environments[*]",
            "resultTemplate": "{ \"Value\" : \"{{{name}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
          } 
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}