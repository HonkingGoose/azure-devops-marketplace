{
    "id": "bb64728d-cfca-4576-a066-bde89930aaaa",
    "name": "RegExCheck",
    "friendlyName": "Regular Expression Check",
    "description": "A VSTS Build Task that checks for RegEx against files",
    "helpMarkDown": "",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "author": "James Taylor",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "RegExChecker",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "checkString",
            "type": "string",
            "label": "Regular Expression to Check",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter a Regular Expression to check your repository files against."
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "powershell.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}