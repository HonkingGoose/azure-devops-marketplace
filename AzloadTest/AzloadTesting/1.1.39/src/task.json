{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "0bff23db-6571-4622-a37c-a57162d0182f",
    "name": "AzureLoadTest",
    "friendlyName": "Azure Load Testing",
    "description": "Automate load test as a part of your pipeline.",
    "helpMarkDown": "",
    "category": "Azure Pipelines",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 39
    },
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "instanceNameFormat": "Retrieving testName",
    "groups": [
        {
            "name": "loadTestResourceGrp",
            "displayName": "Load Test Resource",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "connectedServiceNameARM",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "Azure subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select an Azure Resource Manager subscription to run the load test."
        },
        {
            "name": "loadtestYAML",
            "type": "radio",
            "label": "Load test YAML",
            "required": true,
            "defaultValue": "filePath",
            "helpMarkDown": "Enter the YAML File Path or Inline YAML required for the Load test",
            "options": {
                "filePath": "YAML File Path",
                "inlineYAML": "Inline YAML"
            }
        },   
        {
            "name": "YAMLFilePath",
            "type": "filePath",
            "label": "Load Test File",
            "required": true,
            "visibleRule": "loadtestYAML = filePath",
            "helpMarkDown": "Path of the YAML file. Should be fully qualified path or relative to the default working directory"
        },
        {
            "name": "inlineYAML",
            "type": "multiLine",
            "label": "Inline YAML",
            "defaultValue": "testName: sample\ntestPlan: file path",
            "required": true,
            "visibleRule": "loadtestYAML = inlineYAML",
            "helpMarkDown": "Enter the contents of YAML"
        },
        {
            "name": "loadtestResource",
            "type": "string",
            "label": "Name",
            "required": true,
            "groupName": "loadTestResourceGrp",
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select the name of an existing Azure Load Testing resource"
        },
        {
            "name": "resourceGroup",
            "type": "pickList",
            "label": "Resource Group",
            "required": true,
            "groupName": "loadTestResourceGrp",
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select the Azure Resource Group that contains the Load test resource specified above"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "resourceGroup",
            "endpointId": "$(connectedServiceNameARM)",
            "dataSourceName": "AzureResourceGroups"
        },
        {
            "target": "loadtestResource",
            "endpointId": "$(connectedServiceNameARM)",
            "endpointUrl": "{{{endpoint.url}}}/subscriptions/{{{endpoint.subscriptionId}}}/resources?$filter=resourceType eq 'Microsoft.LoadTestService/loadtests'&api-version=2021-04-01",
            "resultSelector": "jsonpath:$.value[*]",
            "resultTemplate": "{{{name}}}"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}