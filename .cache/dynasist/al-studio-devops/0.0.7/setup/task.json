{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "a6f5be2d-4cbe-4336-a133-e3e5be58e5c9",
    "name": "setup",
    "friendlyName": "AL Studio Setup",
    "description": "Install and activate AL Studio executable.",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "dynasist",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "AL Studio Setup",
    "inputs": [
        {
            "name": "branch",
            "type": "pickList",
            "options": {
                "develop": "Development",
                "staging": "Staging",
                "production": "Production"
            },
            "label": "Product Branch",
            "defaultValue": "develop",
            "required": true,
            "helpMarkDown": "Select source branch to download AL Studio from."
        },
        {
            "name": "licenseKey",
            "type": "string",
            "label": "License Key",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "AL Studio DevOps-specific License Key."
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\setup.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}