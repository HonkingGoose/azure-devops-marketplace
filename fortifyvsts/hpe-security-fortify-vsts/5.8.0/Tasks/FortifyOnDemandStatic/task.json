{
  "id": "CBE8D5FD-A02D-4157-8BFA-21F98FCAA217",
  "name": "FortifyOnDemandStatic",
  "friendlyName": "Fortify on Demand Static Assessment",
  "description": "Submit code for Fortify on Demand security assessment",
  "helpMarkDown": "",
  "category": "Build",
  "visibility": [
    "Build"
  ],
  "author": "Micro Focus",
  "version": {
    "Major": 5,
    "Minor": 8,
    "Patch": 0
  },
  "demands": [],
  "minimumAgentVersion": "1.83.0",
  "groups": [
    {
      "name": "AuthenticationMethods",
      "displayName": "Authentication Methods",
      "isExpanded": true
    },
    {
      "name": "EntitlementOptions",
      "displayName": "Entitlement Options",
      "isExpanded": true
    },
    {
      "name": "ScanOptions",
      "displayName": "Scan Options",
      "isExpanded": true
    },
    {
      "name": "PollOptions",
      "displayName": "Poll Options",
      "isExpanded": true
    }
  ],
  "inputs": [
    {
      "name": "FortifyProjects",
      "type": "filePath",
      "label": "Source code location",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "The path on the agent where your source code files are located."
    },
    {
      "name": "BSIToken",
      "type": "string",
      "label": "Build Server Integration Token",
      "required": true,
      "helpMarkDown": "Generate a BSI Token. For more information, see https://ams.fortify.com/Docs/en/Content/20_Applications/1_Tenant_Apps/06_App_Tabs/09_BuildServer/BSI_Using.htm"
    },
    {
      "name": "APIAuthenticationType",
      "type": "pickList",
      "label": "API Authentication Type",
      "defaultValue": "1",
      "required": true,
      "helpMarkDown": "Select the API authentication type to use",
      "groupName": "AuthenticationMethods",
      "options": {
        "1": "API Key/Secret",
        "2": "Personal Access Token"
      }
    },
    {
      "name": "APIKey",
      "type": "string",
      "label": "API Key",
      "required": true,
      "helpMarkDown": "Use secret build variables to protect your API Key",
      "visibleRule": "APIAuthenticationType = 1",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "APISecret",
      "type": "string",
      "label": "API Secret",
      "required": true,
      "helpMarkDown": "Use secret build variables to protect your API Secret",
      "visibleRule": "APIAuthenticationType = 1",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "Username",
      "type": "string",
      "label": "Username",
      "required": true,
      "helpMarkDown": "Use secret build variables to protect your Username",
      "visibleRule": "APIAuthenticationType = 2",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "PersonalAccessTokenSecret",
      "type": "string",
      "label": "Personal Access Token Secret",
      "required": true,
      "helpMarkDown": "Use secret build variables to protect your Personal Access Token Secret",
      "visibleRule": "APIAuthenticationType = 2",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "TenantID",
      "type": "string",
      "label": "Tenant ID",
      "required": true,
      "helpMarkDown": "Use secret build variables to protect your Tenant ID",
      "visibleRule": "APIAuthenticationType = 2",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "ProxyHost",
      "type": "string",
      "label": "Proxy host",
      "required": false,
      "helpMarkDown": "Proxy host",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "ProxyPort",
      "type": "string",
      "label": "Proxy port",
      "required": false,
      "helpMarkDown": "Proxy port",
      "groupName": "AuthenticationMethods"
    },
    {
      "name": "EntitlementPreference",
      "type": "pickList",
      "label": "Entitlement Preference",
      "required": true,
      "groupName": "EntitlementOptions",
      "options": {
        "0": "Single Scan Only",
        "1": "Subscription Only",
        "2": "Single Scan First Then Subscription",
        "3": "Subscription First Then Single Scan"
      }
    },
    {
      "name": "PurchaseEntitlements",
      "type": "boolean",
      "label": "Purchase Entitlements",
      "required": false,
      "defaultValue":  false,
      "groupName": "EntitlementOptions"
    },
    {
      "name": "InProgressScanActionType",
      "type": "pickList",
      "label": "Action if Scan In Progress",
      "required": true,
      "helpMarkDown": "How to handle a new scan if a scan is already in progress",
      "groupName": "ScanOptions",
      "options": {
        "0": "Do Not Start Scan",
        "1": "Cancel Scan In Progress"
      }
    },
    {
      "name": "RemediationScanPreference",
      "type": "pickList",
      "label": "Remediation Preference Type",
      "helpMarkDown": "How to handle Remediation Scans",
      "required": true,
      "groupName": "ScanOptions",
      "options": {
        "0": "Remediation Scan If Available",
        "1": "Remediation Scan Only",
        "2": "Non Remediation Scan Only"
      }
    },
    {
      "name": "PollingInterval",
      "type": "integer",
      "label": "Polling Interval",
      "groupName": "PollOptions",
      "required": false,
      "defaultValue": 1
    },
    {
      "name": "PolicyFailAction",
      "type": "pickList",
      "label": "Action if policy failing",
      "helpMarkDown": "How to handle if a security policy fails",
      "required": true,
      "groupName": "PollOptions",
      "options": {
        "0": "Complete Build Task and Warn",
        "1": "Fail Build Task"
      }
    }
  ],
  "instanceNameFormat": "Run Fortify on Demand static assessment on $(FortifyProjects)",
  "execution": {
    "Node": {
      "target": "FODStatic.js",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
