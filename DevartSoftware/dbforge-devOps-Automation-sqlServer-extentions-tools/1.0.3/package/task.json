{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "b9c57c81-1fa4-4a7b-841e-b1724e2f9284",
    "name": "dbForgePackage",
    "friendlyName": "dbForge DevOps Automation for SQL Server - Package",
    "instanceNameFormat": "dbForge DevOps Automation for SQL Server - Package",
    "description": "Prepare NuGet deployment package containing database script folder",
    "helpMarkDown": "",
    "category": "Build",
    "author": "Devart Ltd.",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 17
    },
    "groups": [
        {
            "name": "packageGroup",
            "displayName": "Package",
            "isExpanded": true
        },
        {
            "name": "sourceGroup",
            "displayName": "Source",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "id",
            "type": "string",
            "label": "ID",
            "defaultValue": "dbForgePackage.1.0.$(Build.BuildNumber)",
            "required": true,
            "helpMarkDown": "Enter output package file name. The format is {name}.{major}.{minor}.{build}",
            "groupName": "packageGroup"
        },
        {
            "name": "sourceType",
            "type": "pickList",
            "label": "Database folder",
            "defaultValue": "root",
            "options": {
                "root": "Build VSC root",
                "subroot": "Subfolder of build VSC root"
            },
            "required": false,
            "helpMarkDown": "Select if database source project is located in repository root or subfolder path",
            "groupName": "sourceGroup"
        },
        {
            "name": "sourceScriptFolder",
            "type": "string",
            "label": "Subfolder location",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter full path to database source project",
            "groupName": "sourceGroup",
            "visibleRule": "sourceType=subroot"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "powershell.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}