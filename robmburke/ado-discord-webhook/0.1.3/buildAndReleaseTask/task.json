{
    "id": "fd1d030f-d11a-4246-bb0e-3d64a84f714f",
    "name": "ado-discord-webhook",
    "friendlyName": "Discord Webhook",
    "description": "Allows the sending of custom messages to a Discord Webhook URL",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Robert Burke",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 3
    },
    "instanceNameFormat": "Discord Webhook",
    "groups": [
        {
            "name": "credentials",
            "displayName": "Webhook Credentials",
            "isExpanded": true
        },
        {
            "name": "bot",
            "displayName": "Bot Info",
            "isExpanded": true
        },
        {
            "name": "message",
            "displayName": "Message Details",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "groupName": "credentials",
            "name": "channelId",
            "type": "string",
            "label": "Channel ID",
            "defaultValue": "",
            "required": true
        },
        {
            "groupName": "credentials",
            "name": "webhookKey",
            "type": "string",
            "label": "Webhook Key",
            "defaultValue": "",
            "required": true
        },
        {
            "groupName": "bot",
            "name": "name",
            "type": "string",
            "label": "Name",
            "required": false,
            "helpMarkDown": "overrides default webhook name"
        },
        {
            "groupName": "bot",
            "name": "avatar",
            "type": "string",
            "label": "Avatar Image URL",
            "required": false
        },
        {
            "groupName": "message",
            "name": "messageType",
            "type": "pickList",
            "label": "Message Type",
            "required": true,
            "options": {
                "simple": "Simple",
                "complex": "Complex"
            }
        },
        {
            "groupName": "message",
            "name": "simple",
            "type": "string",
            "label": "",
            "required": true,
            "visibleRule": "messageType=simple"
        },
        {
            "groupName": "message",
            "name": "complex",
            "type": "multiLine",
            "label": "",
            "required": true,
            "visibleRule": "messageType=complex"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}