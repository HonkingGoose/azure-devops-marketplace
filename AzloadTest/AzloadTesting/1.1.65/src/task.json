{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "0bff23db-6571-4622-a37c-a57162d0182f",
    "name": "AzureLoadTest",
    "friendlyName": "Azure Load Testing",
    "description": "Automate load test as a part of your pipeline.",
    "helpMarkDown": "",
    "category": "Azure Pipelines",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 65
    },
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "instanceNameFormat": "Retrieving testName",
    "groups": [
        {
            "name": "loadTestResourceGrp",
            "displayName": "Load Test Resource",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "connectedServiceNameARM",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "Azure subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select an Azure Resource Manager subscription to run the load test."
        },
        {
            "name": "loadTestConfigFile",
            "type": "filePath",
            "label": "Load Test File",
            "required": true,
            "helpMarkDown": "Path of the YAML file. Should be fully qualified path or relative to the default working directory"
        },
        {
            "name": "resourceGroup",
            "type": "pickList",
            "label": "Resource Group",
            "required": true,
            "groupName": "loadTestResourceGrp",
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select the Azure Resource Group that contains the Load test resource"
        },
        {
            "name": "loadTestResource",
            "type": "string",
            "label": "Name",
            "required": true,
            "groupName": "loadTestResourceGrp",
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select the name of an existing Azure Load Testing resource"
        },
        {
            "name": "secrets",
            "type": "multiLine",
            "label": "Secrets",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Add/Update secret parameters using the json syntax as follows::<br/> [<br/>&nbsp;&nbsp; {<br/>&nbsp;&nbsp;&nbsp;&nbsp;\"name\": \"key1\", <br/>&nbsp;&nbsp;&nbsp;&nbsp;\"value\": $(secret1) <br/> &nbsp;&nbsp; },<br/>&nbsp;&nbsp; {<br/>&nbsp;&nbsp;&nbsp;&nbsp;\"name\": \"key2\", <br/>&nbsp;&nbsp;&nbsp;&nbsp;\"value\": $(secret2) <br/> &nbsp;&nbsp; }<br/>]",
            "properties": {
                "resizable": true,
                "rows": "10"
            }
        },
        {
            "name": "env",
            "type": "multiLine",
            "label": "env",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Add/Update environment variables using the json syntax as follows:<br/> [<br/>&nbsp;&nbsp; {<br/>&nbsp;&nbsp;&nbsp;&nbsp;\"name\": \"env1\", <br/>&nbsp;&nbsp;&nbsp;&nbsp;\"value\": \"value1\" <br/> &nbsp;&nbsp; },<br/>&nbsp;&nbsp; {<br/>&nbsp;&nbsp;&nbsp;&nbsp;\"name\": \"env2\", <br/>&nbsp;&nbsp;&nbsp;&nbsp;\"value\": \"value2\" <br/> &nbsp;&nbsp; }<br/>]",
            "properties": {
                "resizable": true,
                "rows": "10"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "resourceGroup",
            "endpointId": "$(connectedServiceNameARM)",
            "dataSourceName": "AzureResourceGroups"
        },
        {
            "target": "loadtestResource",
            "endpointId": "$(connectedServiceNameARM)",
            "dataSourceName": "AzureRMResourcesInRGBasedOnType",
            "parameters": {
                "ResourceGroupName": "$(resourceGroup)",
                "ResourceType": "Microsoft.LoadTestService/loadtests"
            },
            "resultTemplate": "{ \"Value\" : \"{{{name}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}