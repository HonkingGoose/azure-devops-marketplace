{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "0f1eba27-a7a6-4788-ae53-fdc47541e6cf",
    "name": "HelmSecrets",
    "friendlyName": "Helm Secrets via Variable Groups",
    "description": "Generate values.yaml based on Variable groups in AZDO",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Mackensie Alvarez",
    "version": {
        "Major": 0,
        "Minor": 11,
        "Patch": 0
    },
    "instanceNameFormat": "Generate Helm Values",
    "inputs": [{
        "name": "helmValues",
        "type": "filePath",
        "label": "Helm Values YAML",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "This should be the path of your helm values that you want to append secrets too"
    }],

    "dataSourceBindings": [{
        "target": "project",
        "endpointId": "tfs:teamfoundation",
        "endpointUrl": "{{endpoint.url}}/_apis/projects",
        "resultSelector": "jsonpath:$.value[?(@.state == 'wellFormed')]",
        "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    }],


    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}