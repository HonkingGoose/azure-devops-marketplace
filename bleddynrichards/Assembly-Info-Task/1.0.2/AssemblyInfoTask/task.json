{
  "id": "3EDC451E-360C-40E5-A221-A42D5C987AB8",
  "name": "Assembly-Info-Task",
  "friendlyName": "Assembly Info",
  "description": "Set assembly manifest data such as title, version, company etc.",
  "helpMarkDown": "Itterate the specified source directory for all AssemblyInfo files and set the appropriate manifest data.",
  "category": "Build",
  "author": "Bleddyn Richards",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 2
  },
  "instanceNameFormat": "Set Assembly Manifest Data",
  "visibility": [
    "Build"
  ],
  "inputs": [
    {
      "name": "Path",
      "type": "filePath",
      "label": "Source folder",
      "defaultValue": "$(Build.SourcesDirectory)",
      "required": true,
      "helpMarkDown": "Source folder for the 'AssemblyInfo.cs' file, can be root as it will find all files recursively."
    },
    {
      "name": "Title",
      "type": "string",
      "label": "Title",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Sets the 'AssemblyTitle'."
    },
    {
      "name": "Product",
      "type": "string",
      "label": "Product",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyProduct' e.g. Product of Example.com"
    },
    {
      "name": "Company",
      "type": "string",
      "label": "Company",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyCompany' e.g. Example.com"
    },
    {
      "name": "Copyright",
      "type": "string",
      "label": "Copyright",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyCopyright' e.g. Copyright Â© $(date:yyyy) Example.com"
    },
    {
      "name": "Trademark",
      "type": "string",
      "label": "Trademark",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyTrademark' e.g. Example.com"
    },
    {
      "name": "Description",
      "type": "string",
      "label": "Description",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyDescription' e.g. Property of Example.com"
    },
    {
      "name": "Culture",
      "type": "string",
      "label": "Culture",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyCulture'."
    },
    {
      "name": "Configuration",
      "type": "string",
      "label": "Configuration",
      "defaultValue": "$(BuildConfiguration)",
      "required": false,
      "helpMarkDown": "Sets the 'AssemblyConfiguration'."
    },
    {
      "name": "VersionNumber",
      "type": "string",
      "label": "Version Number",
      "defaultValue": "$(Build.BuildNumber)",
      "required": true,
      "helpMarkDown": "Sets the 'AssemblyVersion' and 'AssemblyFileVersion'."
    }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\ApplyAssemblyInfo.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}