    },
    {
      "name": "Group",
      "type": "pickList",
      "label": "Member Group",
      "defaultValue": "",
      "options": {
        "All": "All",
        "A": "A (Odd)",
        "B": "B (Even)"
      },  
      "required": true,
      "helpMarkDown": "Group of pool members to enable."
    },
    {
      "name": "DeviceGroup",
      "type": "string",
      "label": "Device Group",
      "defaultValue": "",
