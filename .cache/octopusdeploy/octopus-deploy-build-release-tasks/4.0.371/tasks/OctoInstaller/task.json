{
    "id":  "7aeae2f5-8529-4326-b127-a66c334c6e60",
    "name":  "OctoInstaller",
    "friendlyName":  "Octopus tools installer",
    "description":  "Install a specific version of the octopus tools",
    "helpMarkDown":  "Version: 4.0.371. [More Information](https://g.octopushq.com/TFS-VSTS)",
    "category":  "Tool",
    "runsOn":  [
                   "Agent",
                   "DeploymentGroup"
               ],
    "visibility":  [
                       "Build",
                       "Release"
                   ],
