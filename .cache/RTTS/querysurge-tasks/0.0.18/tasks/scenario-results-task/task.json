{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "88b7dcbe-e822-48fb-9ea8-661d9484b06e",
    "name": "querysurge-run-suite-task",
    "friendlyName": "QuerySurge Run Test Suite",
    "description": "Runs a Test Suite in a Scenario and optionally waits for completion",
    "helpMarkDown": "",
    "category": "Azure Pipelines",
    "author": "RTTS",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 18
    },
	"instanceNameFormat": "Run Test Suite # $(suiteId)",
	"execution": {
        "Node10": {
            "target": "out/scenario-results-task/scenario-results.js"
        }
    },
    "inputs": [
        {
            "name": "host",
            "type": "string",
            "label": "QuerySurge hostname",
            "required": true,
            "helpMarkDown": "Hostname/FQDN/IP address of QuerySurge server (ex. qs.mycorp.com)"
        },
        {
            "name": "port",
            "type": "int",
            "label": "QuerySurge Port",
            "required": true,
            "helpMarkDown": "HTTP Port of QuerySurge server (ex. 80, 8080, 443)"
        },
        {
            "name": "user",
            "type": "identities",
            "label": "QuerySurge username",
            "required": true,
            "helpMarkDown": "Username of QuerySurge user"
        },
        {
            "name": "password",
            "type": "identities",
            "label": "QuerySurge password",
            "required": true,
            "helpMarkDown": "Password of QuerySurge user"
        },
        {
            "name": "projectId",
            "type": "int",
            "label": "Project ID #",
            "required": true,
            "helpMarkDown": "ID # of Project (found in Global Adminstration -> Projects)"
        },
        {
            "name": "execId",
            "type": "string",
            "label": "Scenario Execution ID",
            "required": false,
            "helpMarkDown": "Execution ID of scenario (optional; if omitted will be read from the execId variable set by the Run Suite task)"
        }
    ]
}