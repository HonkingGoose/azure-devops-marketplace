{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "731afec8-1e8d-45e8-9a3f-5839afeb1de8",
  "name": "phrase-download-task",
  "friendlyName": "Phrase Download Task",
  "description": "Task that helps download resource files from phrase.com",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "Rafa≈Ç Nowosielski <rafal@nowosielski.email>",
  "version": {
    "Major": 0,
    "Minor": 2,
    "Patch": 0
  },
  "instanceNameFormat": "Download file $(resourceFileName)",
  "inputs": [
    {
      "name": "phraseToken",
      "type": "string",
      "label": "Token for phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify your token for accessing phrase.com APIs"
    },
    {
      "name": "phraseProject",
      "type": "string",
      "label": "Project on phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify id of the project on phrase.com"
    },
    {
      "name": "phraseProjectLocale",
      "type": "string",
      "label": "Locale in the project on phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify id of the locale in the project on phrase.com"
    },
    {
      "name": "phraseProjectFallbackLocale",
      "type": "string",
      "label": "Fallbqack locale in the project on phrase.com",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Specify id of the fallback locale in the project on phrase.com"
    },
    {
      "name": "resourceFileName",
      "type": "string",
      "label": "Name of the resource file",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify the output name of the resource file"
    },
    {
      "name": "resourceType",
      "type": "pickList",
      "label": "Resource type",
      "required": true,
      "options": {
        "Ruby/Rails YAML" : "yml",
        "Gettext": "gettext",
        "Gettext Template": "gettext_template",
        "Gettext Mo": "gettext_mo",
        "Android Strings": "xml",
        "iOS Localizable Strings": "strings",
        "iOS Localizable Stringsdict": "stringsdict",
        "XLIFF": "xlf",
        "Qt Phrase Book": "qph",
        "Qt Translation Source": "ts",
        "Chrome JSON i18n": "json",
        "React-Intl Simple JSON" : "react_simple_json",
        "React-Intl Nested JSON": "react_nested_json",
        "Simple JSON": "simple_json",
        "Go i18n JSON": "go_i18n",
        "Nested JSON": "nested_json",
        "i18n-node-2 JSON": "node_json",
        ".NET ResX": "resx",
        "Windows Phone ResX": "resx_windowsphone",
        "Windows 8 Resource": "windows8_resource",
        "INI": "ini",
        "Java Properties .properties": "properties",
        "Play Framework Properties": "play_properties",
        "Java Properties XML": "properties_xml",
        "Objective-C/Cocoa Property List": "plist",
        "Symfony XLIFF": "symfony_xliff",
        "Symfony YAML": "yml_symfony",
        "Symfony2 YAML": "yml_symfony2",
        "TMX Translation Memory eXchange": "tmx",
        "Excel XLSX": "xlsx",
        "CSV": "csv",
        "PHP Array": "php_array",
        "Zendesk CSV": "zendesk_csv",
        "Laravel/F3/Kohana Array": "laravel",
        "Angular Translate": "angular_translate",
        "Mozilla Properties": "mozilla_properties",
        "EmberJs": "ember_js",
        "i18next": "i18next",
        "Episerver XML": "episerver"
      },
      "properties": {
        "EditableOptions": "false"
      },
      "helpMarkDown": "Select format of the resource file to downaload.",
    }
  ],
  "execution": {
    "Node10": {
      "target": "index.js"
    }
  }
}