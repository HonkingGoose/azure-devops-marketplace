{
    "id": "bf3b9233-0a55-4611-95ce-771ccc2c2cf0",
    "name": "deploy-artifacts",
    "friendlyName": "Azure Synapse Artifact Deployment",
    "description": "Deploy Azure Synapse Artifacts using JSON files",
    "author": "Andrew Richardson",
    "helpMarkDown": "",
    "category": "Deploy",
    "preview": true,
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "demands": [],
    "version": {
        "Major": "1",
        "Minor": "0",
        "Patch": "0"
    },
    "minimumAgentVersion": "1.100.0",
    "groups": [
        {
            "name": "azure",
            "displayName": "Azure Details",
            "isExpanded": true
        },
        {
            "name": "synapse",
            "displayName": "Synapse Details",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "ServiceConnectionName",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "Azure Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "This is needed to connect to your Azure account.<br>To configure new service connection, select the Azure subscription from the list and click 'Authorize'.<br>If your subscription is not listed or if you want to use an existing Service Principal, you can setup an Azure service connection using 'Add' or 'Manage' button."
        },
        {
            "name": "ResourceGroupName",
            "type": "pickList",
            "label": "Resource group",
            "required": true,
            "helpMarkDown": "Provide the name of the resource group.",
            "properties": {
                "EditableOptions": "True"
            },
            "groupname": "azure"
        },
        {
            "name": "WorkspaceName",
            "type": "string",
            "label": "Synapse Workspace",
            "defaultValue": "",
            "required": "true",
            "helpMarkDown": "Name of the Synapse Workspace.",
            "groupname": "azure"
        },
        {
            "name": "LinkedServicePath",
            "type": "filePath",
            "label": "Path to Linked Service definitions.",
            "helpMarkDown": "",
            "groupname": "synapse"
        },
        {
            "name": "DataflowPath",
            "type": "filePath",
            "label": "Path to Data flow definitions.",
            "helpMarkDown": "",
            "groupname": "synapse"
        },
        {
            "name": "DatasetPath",
            "type": "filePath",
            "label": "Path to Dataset definitions.",
            "helpMarkDown": "",
            "groupname": "synapse"
        },
        {
            "name": "PipelinePath",
            "type": "filePath",
            "label": "Path to Pipeline definitions.",
            "helpMarkDown": "",
            "groupname": "synapse"
        },
        {
            "name": "TriggerPath",
            "type": "filePath",
            "label": "Path to Trigger definitions.",
            "helpMarkDown": "",
            "groupname": "synapse"
        },
        {
            "name": "Continue",
            "type": "boolean",
            "label": "Continue on Error.",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Continue on deployment failures.",
            "groupName": "advanced"
        },
        {
            "name": "IgnoreReadOnlyArtifacts",
            "type": "boolean",
            "label": "Continue on Error when trying to update Workspace Managed Artifacts.",
            "defaultValue": "true",
            "required": false,
            "helpMarkDown": "Continue on Error when trying to update Workspace Managed Artifacts.",
            "groupName": "advanced"
        },
        {
            "name": "Throttle",
            "type": "string",
            "label": "Number of artifacts deployed in parallel.",
            "defaultValue": "5",
            "required": false,
            "helpMarkDown": "Number of artifacts deployed in parallel, default is 5.",
            "groupName": "advanced"
        }
    ],
    "instanceNameFormat": "Deploy Azure Synapse Artifacts",
    "execution": {
        "Node": {
            "target": "./dist/index.js",
            "argumentFormat": ""
        }
    }
}