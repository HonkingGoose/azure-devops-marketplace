{
  "id": "1644f10b-352c-43f3-9957-8c158759ba7c",
  "name": "AzureSQLLogin",
  "friendlyName": "Azure SQL Logins",
  "description": "Add new SQL Users & Logins to a database",
  "author": "Code88",
  "helpMarkDown": "Add new SQL Users & Logins to a database",
  "category": "Deploy",
  "visibility": [
    "Release"
  ],
  "demands": [
    "azureps"
  ],
  "version": {
    "Major": "5",
    "Minor": "0",
    "Patch": "1"
  },
  "minimumAgentVersion": "1.103.0",
  "instanceNameFormat": "Azure SQL Logins $(message)",

  "groups": [
        {
            "name": "ReadOnly",
            "displayName": "Create Read Only Login Account",
            "isExpanded": false
        },
        {
            "name": "AdminUsers",
            "displayName": "Create Admin Login Account",
            "isExpanded": true
        }
        ],

  "inputs": [

         {
            "name": "Server",
            "type": "string",
            "label": "Database Connection",
            "required": false
        },
        {
            "name": "Database",
            "type": "string",
            "label": "Name of the Database",
            "required": false
        },
         {
            "name": "AdminName",
            "type": "string",
            "label": "SQL Admin",
            "required": false
        },
         {
            "name": "AdminPassword",
            "type": "string",
            "label": "SQL Password",
            "required": false
        },
         

         {
            "name": "UserNameSG",
            "type": "string",
            "label": "SendGrid UserName",
            "required": false
        },
         {
            "name": "PasswordSG",
            "type": "string",
            "label": "SendGrid Password",
            "required": false
        },
         {
            "name": "EmailFrom",
            "type": "string",
            "label": "Custom address",
            "required": false
        },
{
"name": "EnableAdminUsers",
"type": "boolean",
"label": "Admin Users",
"defaultValue": "true",
"required": false,
"groupName": "AdminUsers",
"helpMarkDown": "Check this option if you want extended logging enabled"
},

{
"name": "EnableReadOnlyUsers",
"type": "boolean",
"label": "Read Only User",
"defaultValue": "false",
"required": false,
"groupName": "ReadOnly",
"helpMarkDown": "Check this option if you want extended logging enabled"
},

          {
            "name": "UserName",
            "type": "string",
            "label": "Email Addresses",
            "groupName": "AdminUsers",
            "required": false,
             "visibleRule": "EnableAdminUsers = True"
        },
        {
            "name": "ReadOnlyUser",
            "type": "string",
            "label": "Read Only User Name",
            "required": false,
            "groupName": "ReadOnly",
            "defaultValue": "ReadOnlyAzureSQL",
            "helpMarkDown": "Name of the read only account",
            "visibleRule": "EnableReadOnlyUsers = True"
            
        },     
        {
            "name": "ReadOnlyEmail",
            "type": "string",
            "label": "Email Address",
            "required": false,
            "groupName": "ReadOnly",
            "defaultValue": "",
            "helpMarkDown": "Email Address of the user who wants the readonly Information",
            "visibleRule": "EnableReadOnlyUsers = True"
            
        }

  ],  
"dataSourceBindings": [
],
  "execution": {
    "PowerShell3": {
      "target": "$(currentDirectory)\\Azure.ps1"
    }
  }
}