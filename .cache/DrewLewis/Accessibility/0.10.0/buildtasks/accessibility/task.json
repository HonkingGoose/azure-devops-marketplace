            "required": false,
            "helpMarkDown": "A URL that you want to test"
        },
        {
            "name": "tagoptions",
            "type": "pickList",
            "label": "Tag Options",
            "properties":{  
                "EditableOptions":false,
                "MultiSelectFlatList":true
