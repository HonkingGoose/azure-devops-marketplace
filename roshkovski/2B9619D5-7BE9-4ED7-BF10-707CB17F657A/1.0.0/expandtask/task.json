{
    "id": "7C997C5B-7C8D-4E50-A110-E8E6B2769E57",
    "name": "DevOps-Artifacts-Expand",
    "friendlyName": "DevOps Artifacts Expand",
    "description": "Task for artifact expand. Removes source files.",
    "category": "Utility",
    "author": "Piotr Roshkovski",
    "helpMarkDown": "[More Information](odministrator@gmail.com)",
    "demands": [
        "msbuild"
    ],
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 2
    },
	"visibility": [
		"Release"
	],
    "minimumAgentVersion": "2.114.0",
    "instanceNameFormat": "DevOps Artifacts Expand",
    "inputs": [
        {
            "name": "source",
            "type": "string",
            "label": "Source",
            "defaultValue": "$(System.ArtifactsDirectory)\\$(Build.DefinitionName)\\$(Build.BuildNumber)",
            "required": true,
            "helpMarkDown": "Source to expand."
        },
        {
            "name": "dest",
            "type": "string",
            "label": "Destination",
            "defaultValue": "$(System.ArtifactsDirectory)\\$(Build.DefinitionName)\\$(Build.BuildNumber)",
            "required": true,
            "helpMarkDown": "Destination to expand files\\folders."
        }
    ],
    "execution": {
        "Powershell": {
            "target": "$(currentDirectory)\\scripts\\decompress-it!.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    },
    "messages": {
        "TaskSuccessCode": "Successfully passed task.",
        "TaskFailedCode": "Failed to pass task."
    }
}