{
    "id": "d44d30a8-0a8c-4b9b-a8b7-78e12a9f7cc6",
    "name": "AcmeCrossAssemblerBuild",
    "friendlyName": "Acme Cross-Assembler Build",
    "description": "Build with the Acme Cross-Assembler for 6502/6510/65816 cpu",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build"
    ],
    "author": "Tony Landi",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Build $(sourcefile)",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "sourcefile",
            "type": "filePath",
            "label": "Path to project file",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The source file which will be passed to Acme to compile."
        },
        {
            "name": "outputfile",
            "type": "string",
            "label": "Output file pattern",
            "defaultValue": "*.prg",
            "required": true,
            "helpMarkDown": "Filename(s) to publish"
        },                
        {
            "name": "arguments",
            "type": "string",
            "label": "Acme build arguments",
            "defaultValue": "-v3",
            "required": false,
            "helpMarkDown": "Additional arguments passed to Acme."
        },
        {
            "name": "samplebool",
            "type": "boolean",
            "label": "Sample Boolean",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "If this is true, this task will fail if any errors are written to the StandardError stream.",
            "groupName": "advanced"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "task.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}