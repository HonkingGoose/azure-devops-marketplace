{
  "id": "c704915c-1f6c-4237-9edd-4330da1ad3e6",
  "name": "trigger-release",
  "friendlyName": "Trigger a Release.",
  "description": "Trigger a Release by replacing the characters in it name. Cross platform (work on Windows/Linux/Mac)",
  "helpMarkDown": "[More Information](https://github.com/baoduy/azure-devops-rename-variables)",
  "category": "Utility",
  "visibility": ["Build", "Release"],
  "author": "Duy",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 0
  },
  "instanceNameFormat": "Trigger a Release",
  "inputs": [
    {
      "name": "releaseIdInput",
      "type": "pickList",
      "label": "Release Definition",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "The Release Definition name."
    },
    {
      "name": "releaseStagesInput",
      "type": "string",
      "label": "Release Stages",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Target specific release stages (comma separated)."
    }
  ],
  "sourceDefinitions": [
    {
      "target": "releaseIdInput",
      "endpoint": "https://vsrm.dev.azure.com/$(system.collectionId)/$(system.teamProject)/_apis/release/definitions?api-version=5.1",
      "authKey": "$(system.AccessToken)",
      "keySelector": "jsonpath:$.value[*].id",
      "selector": "jsonpath:$.value[*].name"
    }
  ],
  "execution": { "Node": { "target": "index.js" } },
  "$schema": "https://raw.githubusercontent.com/microsoft/azure-pipelines-task-lib/master/tasks.schema.json"
}
