{
    "id": "6150909a-27fb-4ead-8de4-cbb91de82172",
    "name": "MLPublishedPipelineRestAPITask",
    "friendlyName": "AzureML Published Pipeline",
    "description": "Invoke Azure Machine Learning published pipelines.",
    "author": "ms-air-aiagility",
    "helpUrl": "https://docs.microsoft.com/azure/devops/pipelines/tasks/utility/http-rest-api",
    "helpMarkDown": "[Learn more about this task](https://go.microsoft.com/fwlink/?linkid=870236)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Server",
        "ServerGate"
    ],
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 90
    },
    "instanceNameFormat": "Invoke ML pipeline",
    "groups": [
        {
            "name": "completionOptions",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "connectedServiceName",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "properties": {
                "EndpointFilterRule": "ScopeLevel == AzureMLWorkspace"
            },
            "label": "AML Workspace",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Machine Learning Workspace"
        },
        {
            "name": "PipelineId",
            "type": "picklist",
            "label": "Pipeline Id",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Pipeline Ids in the workspace"
        },
        {
            "name": "ExperimentName",
            "type": "string",
            "label": "Experiment Name",
            "defaultValue": "experimentationName",
            "required": false,
            "helpMarkDown": "Experiment name"
        },
        {
            "name": "PipelineParameters",
            "type": "string",
            "label": "Pipeline Parameters",
            "defaultValue": "\"key\": \"value\"",
            "required": false,
            "helpMarkDown": "Add key value pairs as part of request body properties, for example: 'key': 'value'"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "PipelineId",
            "endpointId": "$(connectedServiceName)",
            "dataSourceName": "MachineLearningPipelinesList",
            "resultTemplate": "{\"Value\":\"{{{Id}}}\",\"DisplayValue\":\"{{{Id}}}\"}"
        }
    ],
    "execution": {
        "HttpRequest": {
            "Execute": {
                "EndpointId": "$(connectedServiceName)",
                "EndpointUrl": "https://{{endpoint.mlWorkspaceLocation}}.aether.ms/api/v1.0/subscriptions/{{endpoint.subscriptionId}}/resourceGroups/{{endpoint.resourceGroupName}}/providers/Microsoft.MachineLearningServices/workspaces/{{endpoint.mlWorkspaceName}}/PipelineRuns/PipelineSubmit/$(PipelineId)",
                "Method": "POST",
                "Body": "{ \"AzDevOpsCallBackInfo\": { \"JobId\": \"$(system.jobId)\", \"HubName\": \"$(system.HostType)\", \"TaskInstanceId\": \"$(system.TaskInstanceId)\", \"PlanId\": \"$(system.planId)\", \"ProjectId\": \"$(system.teamProjectId)\", \"PlanUri\": \"$(system.CollectionUri)\", \"AuthToken\": \"$(system.AccessToken)\" }, \"ExperimentName\": \"$(ExperimentName)\", \"RunSource\": \"PipelineRun\", $(PipelineParameters)}",
                "Headers": "{\n\"Content-Type\":\"application/json\" \n}",
                "WaitForCompletion": "true"
            }
        }
    }
}
