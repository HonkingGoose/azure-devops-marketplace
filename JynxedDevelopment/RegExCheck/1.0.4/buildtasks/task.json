{
    "id": "bb64728d-cfca-4576-a066-bde89930aaaa",
    "name": "RegExCheck",
    "friendlyName": "Regular Expression Check",
    "description": "A VSTS build task for checking file contents against a regular expression.",
    "helpMarkDown": "",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "author": "James Taylor",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 4
    },
    "instanceNameFormat": "RegExChecker",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "checkString",
            "type": "string",
            "label": "Regular expression",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "A regular expression to check files against."
        },
        {
            "name": "rootDirectory",
            "type": "string",
            "label": "Root directory",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the directory to check in, the check is recursive."
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "powershell.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}