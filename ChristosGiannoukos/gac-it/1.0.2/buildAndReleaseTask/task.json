{
    "id": "460cec93-a7b1-422d-abb2-7471ede3225d",
    "name": "GACIt!",
    "friendlyName": "GAC these files",
    "description": "It registers into GAC all dll files in a folder with the proper name",
    "helpMarkDown": "Version 1.0.2",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Christos Giannoukos",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 2
    },
    "instanceNameFormat": "Echo $(samplestring)",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "p_DllPath",
            "type": "string",
            "label": "Dll file folder path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Provide the folder path which contains all dll files"
        },
        {
            "name": "p_FileMask",
            "type": "string",
            "label": "FileMask for the dll files.",
            "defaultValue": "*",
            "required": false,
            "helpMarkDown": "Choose which dlls to register. DEfault *. Example *mycompany*"
        },
        {
            "name": "p_Recurse",
            "type": "Boolean",
            "label": "Include subfolders?",
            "defaultValue": true,
            "required": false,
            "helpMarkDown": "set to false if you don't want to include subfolders "
        }
    ],
    "execution": {        
        "PowerShell":  {
                               "target":  "$(currentDirectory)\\GACIt.ps1",
                               "argumentFormat":  "",
                               "workingDirectory":  "$(currentDirectory)"
                           }
        
    }
}