{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "e6e43054-d95e-4940-bb84-1cb6e98c4583",
    "name": "sshDownload",
    "friendlyName": "SSH Download",
    "description": "SSH / SFTP Dowload 0.1.35",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Adacta d.o.o.",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 35
    },
    "minimumAgentVersion": "1.95.1",
    "instanceNameFormat": "SSH Download $(source)",
    "groups": [
        {
            "name": "sshConnection",
            "displayName": "SSH Connection",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "showEnvironmentVariables": false,
    "inputs": [
        {
            "groupName": "sshConnection",
            "name": "connectionType",
            "type": "pickList",
            "options": {
                "connectedServiceSSH": "SSH Connection",
                "hostname": "Hostname"
            },
            "label": "Connection Type",
            "required": true,
            "helpMarkDown": "Select connection type"
        },
        {
            "name": "sshEndpoint",
            "visibleRule": "connectionType = connectedServiceSSH",
            "groupName": "sshConnection",
            "type": "connectedService:ssh",
            "label": "SSH service connection",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "SSH service connection with connection details for the remote machine."
        },
        {
            "name": "sshHost",
            "visibleRule": "connectionType = hostname",
            "groupName": "sshConnection",
            "type": "string",
            "label": "SSH hostname",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "SSH hostname"
        },
        {
            "name": "secureFile",
            "visibleRule": "connectionType = hostname",
            "groupName": "sshConnection",
            "type": "secureFile",
            "label": "Secure File",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Select the secure file to download to a temporary location on the agent. The file will be cleaned up after the build or release."
        },
        {
            "name": "username",
            "visibleRule": "connectionType = hostname",
            "groupName": "sshConnection",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Username / login"
        },
        {
            "name": "password",
            "visibleRule": "connectionType = hostname",
            "groupName": "sshConnection",
            "type": "string",
            "label": "Password / Key passphrase",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Password for username or Key passphrase. \nIt can accept variable defined in build or release pipelines as '$(passwordVariable)'. \nYou may mark the variable type as 'secret' to secure it."
        },
        {
            "name": "source",
            "type": "filePath",
            "label": "Source path",
            "defaultValue": "$(Build.ArtifactStagingDirectory)",
            "required": true,
            "helpMarkDown": "Remote source path to download"
        },
        {
            "name": "target",
            "type": "string",
            "label": "Destination path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Local (agent) target destination path to put downloaded files"
        }
    ],
    "OutputVariables":[
        {
            "name":"ProcessedFilesCount",
            "description":"Number of processed files"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "sshDownload.ps1"
        }
    }
}