{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "83a6b817-c838-4eff-b6bc-1fa6d884321e",
    "name": "PostBuildTask",
    "friendlyName": "Post Build Task",
    "description": "Post Build Task used to upload configuration files values to ECS",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "ECS",
    "visibility": [
        "Build",
        "Release"
    ],
    "version": {
        "Major": 0,
        "Minor": 5,
        "Patch": 0
    },
    "instanceNameFormat": "Post build task",
    "inputs": [
        {
            "name": "configType",
            "type": "pickList",
            "label": "Type of configuration file",
            "defaultValue": "1",
            "required": true,
            "helpMarkDown": "Type of configuration file.",
            "options": {
                "1": "CSCF",
                "2": "JSON",
                "3": "XML"
            }
        },
        {
            "name": "pathToConfigFile",
            "type": "filePath",
            "label": "Path to the configuration file",
            "required": true,
            "helpMarkDown": "Path to the configuration file."
        },
        {
            "name": "pathToScopeBindingsFile",
            "type": "filePath",
            "label": "Path to the EV2 scope bindings file",
            "required": true,
            "helpMarkDown": "Path to the EV2 scope bindings file."
        },
        {
            "name": "CertificateValueText",
            "type": "string",
            "label": "ECS Certificate Value Text (Base64).",
            "required": true
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\postbuildtask.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}