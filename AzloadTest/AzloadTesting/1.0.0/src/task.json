{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "0bff23db-6571-4622-a37c-a57162d0182f",
    "name": "AzloadTest",
    "friendlyName": "Automate load test",
    "description": "Automate load test as a part of your pipeline.",
    "helpMarkDown": "",
    "category": "Azure Pipelines",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "instanceNameFormat": "Retrieving testName",
    "inputs": [
        {
            "name": "testname",
            "type": "string",
            "label": "testname",
            "required": true,
            "helpMarkDown": "The name of the test"
        },
        {
            "name": "testdesc",
            "type": "string",
            "label": "testdesc",
            "defaultValue": "Sample Test",
            "required": false,
            "helpMarkDown": "Description of the test"
        },
        {
            "name": "engineInstance",
            "type": "int",
            "label": "engineInstance",
            "defaultValue": "1",
            "required": false,
            "helpMarkDown": "Number of engines"
        },
        {
            "name": "engineSize",
            "type": "string",
            "label": "engineSize",
            "defaultValue": "s",
            "required": false,
            "helpMarkDown": "Engine size"
        },
        {
            "name": "tenantId",
            "type": "string",
            "label": "tenantId",
            "required": true,
            "helpMarkDown": "Tenant Id"
        },
        {
            "name": "TestDrop",
            "type": "string",
            "label": "Test Folder",
            "required": true,
            "helpMarkDown": "Folder in the root of the repository where test files are stored"
        },
        {
            "name": "TestPlan",
            "type": "filePath",
            "label": "Apache JMeter file",
            "required": true,
            "helpMarkDown": "jmx filename with extension present in the TestDrop in the repository"
        },
        {
            "name": "configFile",
            "type": "filePath",
            "label": "Apache config file",
            "required": false,
            "helpMarkDown": "configuration filename with extension present in the TestDrop in the repository"
        },
        {
            "name": "subscription",
            "type": "string",
            "label": "Subscription",
            "required": true,
            "helpMarkDown": "An Azure subscription where the load test resource exists"
        },
        {
            "name": "loadTestRes",
            "type": "string",
            "label": "loadTestResource",
            "required": true,
            "helpMarkDown": "The load test resource in Azure where the test is created and run"
        },
        {
            "name": "resourcegroup",
            "type": "string",
            "label": "resourcegroup",
            "required": true,
            "helpMarkDown": "Resource Group of the load test resource"
        },
        {
            "name": "apikey",
            "type": "string",
            "label": "apikey",
            "required": true,
            "helpMarkDown": "Bearer token"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}