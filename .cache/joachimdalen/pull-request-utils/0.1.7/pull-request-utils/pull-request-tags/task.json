    "Major": 0,
    "Minor": 1,
    "Patch": 1
  },
  "instanceNameFormat": "$(Action)",
  "inputs": [
    {
      "name": "action",
      "type": "pickList",
      "label": "Action",
      "defaultValue": "assign",
      "required": false,
      "options": {
        "assign": "Assign",
        "check": "Check if tag is assigned",
        "delete": "delete"
      }
    },
    {
      "name": "tag",
      "type": "string",
      "label": "Tag",
      "helpMarkDown": "Tag to perform action on.",
      "required": true
    }
  ],
  "OutputVariables": [
    {
      "name": "tagCheckResult",
      "description": "The result of the check"
    }
  ],
  "execution": {
    "Node10": {
      "target": "index.js"
    }
  }
