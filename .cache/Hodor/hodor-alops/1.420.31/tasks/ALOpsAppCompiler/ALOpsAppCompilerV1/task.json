{
    "id": "6ccb97e4-cd3b-4f5c-82d0-3b733949d45d",
    "name": "ALOpsAppCompiler",
    "friendlyName": "ALOps App Compiler",
    "description": "Compiles NAV Apps",
    "author": "Hodor",
    "helpMarkDown": "This extension assists in automating DynamicsNAV App builds",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [],
    "version": {
        "Major": "1",
        "Minor": "420",
        "Patch": "10"
    },
    "minimumAgentVersion": "1.95.0",
    "instanceNameFormat": "ALOps App Compiler",
    "inputs": [
        {
            "name": "usedocker",
            "type": "boolean",
            "label": "In Docker",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Run command in Docker container."
        },
        {
            "name": "targetproject",
            "type": "filePath",
            "label": "Target Project",
            "required": false,
            "defaultValue": "./app.json",
            "helpMarkDown": "Path of the project to compile. Must be a fully qualified path or relative to $(System.DefaultWorkingDirectory)."
        },
        {
            "name": "nav_computername",
            "type": "string",
            "label": "NAV Computer Name",
            "defaultValue": "localhost",
            "required": true,
            "helpMarkDown": "NAV Server used for symbols and compiling the app.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "nav_serverinstance",
            "type": "string",
            "label": "NAV Server Instance",
            "defaultValue": "BC140",
            "required": true,
            "helpMarkDown": "NAV Server Instance used for symbols and compiling the app.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "nav_tenant",
            "type": "string",
            "label": "NAV Tenant",
            "defaultValue": "default",
            "required": true,
            "helpMarkDown": "NAV Tenant used for symbols and compiling the app.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "nav_ports_dev",
            "type": "int",
            "label": "NAV Dev-Port",
            "defaultValue": "7049",
            "required": true,
            "helpMarkDown": "NAV Port used for DEV-Service.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "al_compiler_version",
            "type": "string",
            "label": "AL Compiler",
            "defaultValue": "0.12.15355",
            "required": true,
            "helpMarkDown": "AL Compiler version used for compiling.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "al_analyzer",
            "type": "string",
            "label": "AL Analyzer",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "AL Analyzer used for compiling."
        },
        {
            "name": "nav_app_version",
            "type": "string",
            "label": "App Version",
            "defaultValue": "1.0.*.0",
            "required": true,
            "helpMarkDown": "Template for versioning NAV-Apps."
        },
        {
            "name": "vsix_download_path",
            "type": "string",
            "label": "VSIX Url",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Alternative VSIX download url.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "use_ssl",
            "type": "boolean",
            "label": "Use SSL",
            "defaultValue": "0",
            "required": false,
            "helpMarkDown": "Use SSL for connections.",
            "visibleRule": "usedocker = false"
        },
        {
            "name": "usecompression",
            "type": "boolean",
            "label": "Compress Source File for Transfer",
            "defaultValue": true,
            "required": false,
            "helpMarkDown": "Run command in Docker container.",
            "visibleRule": "usedocker = true"
        },
        {
            "name": "failed_on_warnings",
            "type": "boolean",
            "label": "Fail on Warnings",
            "defaultValue": "0",
            "required": false,
            "helpMarkDown": "Fail build when Warnings occur."
        },
        {
            "name": "fixed_tag",
            "type": "string",
            "label": "Fixed Container Tag",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Allows recycling of containers.",
            "visibleRule": "usedocker = true"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "Build-NAVMgtNavApp.ps1"
        }
    }
}