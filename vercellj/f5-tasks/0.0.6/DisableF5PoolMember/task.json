    },
    {
      "name": "PoolName",
      "type": "string",
      "label": "Pool",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "F5 pool name *case sensitive*."
    },
    {
      "name": "UserName",
      "type": "string",
      "label": "Login",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "F5 user name"
    },
    {
      "name": "Password",
      "type": "string",
      "label": "Password",
      "defaultValue": "",
