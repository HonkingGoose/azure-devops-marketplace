{
    "id": "5164728d-cfca-4576-a066-bde89930bf2b",
    "name": "MqttPublisher",
    "friendlyName": "MQTT Publisher",
    "description": "Publishes data to MQTT",
    "helpMarkDown": "",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "author": "Koen Boutsen",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 10
    },
    "instanceNameFormat": "Publishes data to MQTT",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "mqttEndpoint",
            "type": "string",
            "label": "MQTT endpoint",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the url of the MQTT broker"
        },
        {
            "name": "mqttUsername",
            "type": "string",
            "label": "MQTT username",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the username for your MQTT broker"
        },
        {
            "name": "mqttTopic",
            "type": "string",
            "label": "MQTT topic",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the MQTT topic"
        },
        {
            "name": "payload",
            "type": "multiLine",
            "label": "Payload",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the payload data to be published"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "powershell.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}