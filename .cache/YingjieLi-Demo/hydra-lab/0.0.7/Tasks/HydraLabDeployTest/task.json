{
    "id": "faa2220b-3a71-4022-873e-d5b7b188eb53",
    "name": "HydraLabDeployTest",
    "friendlyName": "Deploy Test to HydraLab",
    "description": "Deploy Test to HydraLab",    
    "author": "Microsoft MMX ES and Test Dev",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "npm"
    ],
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Deploy Tests of ${pkgName} to HydraLab",
    "inputs": [
        {
            "name": "serviceEndpoint",
            "aliases": [
                "serviceConnection"
            ],
            "type": "connectedService:hydra-lab",
            "label": "Service connection",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Hydra Lab service connection that is configured with your account credentials."
        },
        {
            "name": "commitId",
            "type": "string",
            "label": "Commit Id",
            "defaultValue": "$(Build.SourceVersion)",
            "required": false,
            "helpMarkDown": "The latest version control change of the triggering repo that is included in this build."
        },
        {
            "name": "commitCount",
            "type": "string",
            "label": "Commit Count",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Commit Count"
        },
        {
            "name": "commitMsg",
            "type": "string",
            "label": "Commit Message",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Commit Message"
        },
        {
            "name": "buildFlavor",
            "type": "string",
            "label": "Build Flavor",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Build Flavor"
        },
        {
            "name": "apkPath",
            "type": "filePath",
            "label": "APK Path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the APK file you want to test."
        },
        {
            "name": "testApkPath",
            "type": "filePath",
            "label": "Test APK Path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the Test APK file."
        },
        {
            "name": "pkgName",
            "type": "string",
            "label": "Package Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The unique package identifier (e.g. com.foo.myapp) of your application."
        },
        {
            "name": "testPkgName",
            "type": "string",
            "label": "Test APP Package Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The unique package identifier (e.g. com.foo.myapp) of your test app."
        },
        {
            "name": "testSuiteName",
            "type": "string",
            "label": "Test Suite Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The test suite name of your test app."
        },
        {
            "name": "deviceIdentifier",
            "type": "string",
            "label": "Device Identifier",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The Device Identifier."
        },
        {
            "name": "groupTestType",
            "type": "string",
            "label": "Group Test Type",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Group Test Type."
        },
        {
            "name": "reportAudience",
            "type": "string",
            "label": "Report Audience",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "The Report Audience."
        },
        {
            "name": "instrumentationArgs",
            "type": "string",
            "label": "Instrumentation Args",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Arg1=Value1, Arg2=Value2."
        },
        {
            "name": "extraArgs",
            "type": "string",
            "label": "Extra Args",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Arg1=Value1, Arg2=Value2."
        },
        {
            "name": "timeoutSec",
            "type": "string",
            "label": "Timeout Sec",
            "defaultValue": "2000",
            "required": false,
            "helpMarkDown": "Timeout Sec."
        }
    ],
    "execution": {
        "Node10": {
            "target": "hydra-lab-deploy-test.js"
        }
    }
}