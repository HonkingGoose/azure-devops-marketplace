{
  "id": "861ece10-3ec4-11eb-b2a9-df50acf09688",
  "name": "Rapise Test Adapter",
  "friendlyName": "Rapise Test Adapter",
  "description": "Rapise Test Adapter configuration",
  "author": "Inflectra, Denis Markovtsev",
  "helpMarkDown": "Replace with markdown to show in help",
  "category": "Utility",
  "visibility": [
    "Build"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "6",
    "Patch": "0"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Rapise Test Adapter",
  "groups": [
    {
        "name": "executionOptions",
        "displayName": "Execution Options",
        "isExpanded": true
    },
    {
        "name": "advancedExecutionOptions",
        "displayName": "Advanced Execution Options",
        "isExpanded": false
    }
  ], 
  "inputs": [
    {
      "name": "installRapise",
      "type": "boolean",
      "label": "Rapise Needs to Be Installed",
      "defaultValue": "true",
      "required": true,
      "helpMarkDown": "You may have Rapise already installed, or install it by enabling this option.",
      "groupName": "executionOptions"
    },
    {
      "name": "rapiseVersion",
      "type": "string",
      "label": "Rapise Version",
      "defaultValue": "6.6.21.22",
      "required": false,
      "helpMarkDown": "Rapise Version to Install",
      "visibleRule": "installRapise == true",
      "groupName": "executionOptions"
    },
    {
      "name": "recordVideo",
      "type": "boolean",
      "label": "Record Video of Execution",
      "defaultValue": "True",
      "required": false,
      "helpMarkDown": "Video recording will be enabled for Execution and uploaded to Spira Test Run",
      "groupName": "advancedExecutionOptions"
    }	
  ],
  "execution": {
    "PowerShell3": {
      "target": "task.ps1"
    }
  }
}